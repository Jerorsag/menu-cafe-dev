---
import "../../styles/global.css"
import { MapPin, Car, Users, Clock, Navigation, Phone, Instagram } from '@lucide/astro';
---

<section class="relative w-full bg-gradient-to-br from-gray-50 to-white py-16 lg:py-20" id="ubicacion">
  <div class="container-mocawa">
    <!-- Header de la sección -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-4">
        <MapPin class="text-[var(--sage)] w-6 h-6" />
        <span class="text-[var(--sage)] font-medium text-sm uppercase tracking-wide">Encuéntranos</span>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[var(--sage-darker)] mb-4">
        Nuestra Ubicación
      </h2>
      <p class="text-gray-600 text-lg max-w-2xl mx-auto">
        Te esperamos en el corazón del Centro Comercial Mocawa Plaza. 
        Ven y disfruta del mejor café 100% quindiano en un ambiente acogedor.
      </p>
    </div>

    <!-- Grid principal -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
      
      <!-- Columna izquierda: Información y horarios -->
      <div class="lg:col-span-1 space-y-6">
        
        <!-- Tarjeta de dirección -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
          <div class="flex items-start gap-4">
            <div class="bg-[var(--sage)]/10 p-3 rounded-xl">
              <MapPin class="text-[var(--sage)] w-6 h-6" />
            </div>
            <div>
              <h4 class="text-lg font-bold text-[var(--sage-darker)] mb-2">
                Dirección
              </h4>
              <p class="text-gray-600 leading-relaxed">
                CC Mocawa Plaza<br>
                Primer Piso<br>
                Cra 14 # 9 norte 16<br>
                Armenia, Quindío
              </p>
            </div>
          </div>
        </div>

        <!-- Tarjeta de horarios -->
        <div class="bg-gradient-to-r from-[var(--sage)] to-[var(--sage-dark)] rounded-2xl shadow-lg p-6 text-white">
          <div class="flex items-center gap-3 mb-4">
            <Clock class="w-6 h-6" />
            <h4 class="text-lg font-bold">Horarios de Atención</h4>
          </div>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium">Lunes a Viernes</span>
              <span class="font-bold text-lg">6:30 AM - 7:30 PM</span>
            </div>
            <div class="flex justify-between items-center opacity-75">
              <span class="font-medium">Sabado</span>
              <span class="font-medium">6:30 AM - 5:30 PM</span>
            </div>
          </div>
          <div class="mt-4 p-3 bg-white/10 rounded-xl backdrop-blur-sm">
            <p class="text-sm text-white/90">
              💡 <strong>Tip:</strong> ¡Llegamos temprano para servirte el mejor café fresco!
            </p>
          </div>
        </div>

        <!-- Contacto rápido -->
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
          <h4 class="text-lg font-bold text-[var(--sage-darker)] mb-4">Contacto</h4>
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <Phone class="text-[var(--sage)] w-5 h-5" />
              <span class="text-gray-600">+57 312 628 2487</span>
            </div>
            <div class="flex items-center gap-3">
              <Instagram class="text-pink-500 w-5 h-5" />
              <a href="https://www.instagram.com/mocawacafe/" class="text-gray-700 underline" target="_blank">mocawacafe</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Columna derecha: Mapa -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 h-full min-h-[400px]">
          <div class="relative h-full">
            <!-- Mapa placeholder/iframe -->
            <div class="w-full h-full bg-gradient-to-br from-[var(--sage)]/20 to-[var(--sage-dark)]/20 flex items-center justify-center min-h-[400px]">
              <!-- Aquí iría tu iframe de Google Maps -->
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83855.84511645911!2d-75.66345363192907!3d4.530409656173392!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e38f4fb3a5737b7%3A0x946175a7b9b257a7!2sHotel%20Mocawa%20Plaza!5e1!3m2!1ses-419!2sco!4v1750194862138!5m2!1ses-419!2sco"
                width="100%" 
                height="100%" 
                style="border:0; min-height: 400px;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade"
                class="rounded-2xl"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Decoración de fondo (lado contrario) -->
  <div class="absolute -top-10 right-10 w-72 h-72 bg-gradient-to-bl from-white-500/5 to-gray-700/5 rounded-full -translate-y-36 -translate-x-36 pointer-events-none z-0"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-[var(--sage)]/5 to-transparent rounded-full translate-y-48 pointer-events-none z-0"></div>
</section>

<style>
  /* Asegurar que el iframe se adapte bien */
  iframe {
    width: 100%;
    height: 100%;
    border-radius: 1rem;
  }
  
  /* Efectos hover suaves */
  .group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container-mocawa {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>