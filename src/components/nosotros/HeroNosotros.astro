---
import "../../styles/global.css"
import { Heart, MapPin, Users } from '@lucide/astro';
---

<section class="relative bg-gradient-to-br from-[var(--sage)] to-[var(--sage-dark)] border-b border-white/10 overflow-hidden">
  <div class="container-mocawa py-16 lg:py-20 relative">
    <!-- Contenido Principal -->
    <div class="lg:grid lg:grid-cols-2 lg:gap-8 lg:items-center">
      <!-- Columna Izquierda: Contenido -->
      <div class="text-center lg:text-left">
        <!-- Encabezado Principal -->
        <div class="mb-12">
          <div class="inline-flex items-center gap-2 mb-6">
            <Heart class="text-white w-6 h-6" />
            <span class="text-white font-medium text-sm uppercase tracking-wide">Nuestra Historia</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            Más que un café,<br>
            <span class="bg-gradient-to-r from-white to-white/80 bg-clip-text text-transparent">
              somos familia
            </span>
          </h1>
          
          <p class="text-white/90 text-lg md:text-xl max-w-3xl lg:max-w-none mx-auto lg:mx-0 mb-8 leading-relaxed">
            Desde 2019 en el corazón de Armenia, creamos momentos especiales 
            con cada taza de café 100% quindiano. Tu lugar de encuentro y pausa.
          </p>
        </div>

        <!-- Widget de Estado -->
        <div class="flex flex-col sm:flex-row lg:flex-col xl:flex-row items-center justify-center lg:justify-start gap-4 mb-8">
          <!-- Años de Experiencia -->
          <div class="flex items-center gap-2 bg-card px-4 py-2 rounded-full border border-card">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-layout font-medium">+5 años</span>
          </div>
          
          <!-- Tiempo de Preparación -->
          <div class="flex items-center gap-2 bg-card px-4 py-2 rounded-full border border-card">
            <MapPin class="text-accent w-4 h-4" />
            <span class="text-layout font-medium">CC Mocawa Plaza</span>
          </div>
          
          <!-- Calidad Garantizada -->
          <div class="flex items-center gap-2 bg-card px-4 py-2 rounded-full border border-card">
            <Users class="text-green-500 w-4 h-4" />
            <span class="text-layout font-medium">Parte de tu comunidad</span>
          </div>
        </div>
        
        <!-- CTA Centrados -->
        <div class="text-center lg:text-left">
          <div class="inline-flex flex-col sm:flex-row gap-4 items-center">
            <a href="#nuestra-historia" class="btn-primary bg-white text-[var(--sage-darker)] hover:bg-white/90 transition-all duration-300 px-8 py-3 rounded-xl font-semibold min-w-[200px] text-center">
              Conoce Nuestra Historia
            </a>
            <a href="/menu" class="btn-secondary border-white text-white hover:border-white/80 hover:text-white/90 transition-all duration-300 px-8 py-3 rounded-xl font-semibold min-w-[200px] text-center">
              Ver Nuestro Menú
            </a>
          </div>
        </div>
      </div>

      <!-- Columna Derecha: Imagen -->
      <div class="hidden lg:flex lg:justify-center lg:items-center mt-12 lg:mt-0">
        <div class="relative">
          <img 
            src="/img/products/instalaciones.png" 
            alt="Mocawa Café en Centro Comercial Mocawa Plaza"
            class="w-80 xl:w-96 h-auto object-cover rounded-2xl shadow-2xl transform hover:scale-102 transition-transform duration-300 ease-in-out"
            loading="eager"
          />
        </div>
      </div>
    </div>

    <!-- Imagen móvil (centrada abajo) -->
    <div class="lg:hidden mt-12 flex justify-center">
      <div class="relative">
        <img 
          src="/img/products/instalaciones.png" 
          alt="Mocawa Café en Centro Comercial Mocawa Plaza"
          class="w-80 h-auto object-cover rounded-2xl shadow-2xl"
          loading="eager"
        />
        <!-- Efecto de resplandor detrás de la imagen -->
        <div class="absolute inset-0 bg-white/10 rounded-2xl blur-xl scale-110 -z-10"></div>
      </div>
    </div>
  </div>
  
  <!-- Decoración de fondo -->
  <div class="absolute top-0 right-0 w-72 h-72 bg-gradient-to-bl from-pink-500/5 to-orange-500/5 rounded-full -translate-y-36 translate-x-36 pointer-events-none z-0"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-tr from-[var(--sage)]/5 to-transparent rounded-full translate-y-48 -translate-x-48 pointer-events-none z-0"></div>
</section>